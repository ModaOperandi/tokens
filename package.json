{
  "name": "@moda/tokens",
  "version": "0.0.0-development",
  "description": "Constant values for modaoperandi.com",
  "repository": "git@github.com:ModaOperandi/tokens.git",
  "author": "Moda Operandi",
  "license": "MIT",
  "private": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "style": "lib/assets/stylesheets/_tokens.scss",
  "files": [
    "dist",
    "lib/assets"
  ],
  "scripts": {
    "clean": "rm -rf ./dist",
    "export": "tsc scripts/export.ts && node scripts/export.js",
    "build": "yarn clean && yarn export && yarn tsc",
    "predeploy": "yarn build && cd docs && yarn install && yarn run build",
    "start": "cd docs && yarn start",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/node": "^12.7.4",
    "cz-conventional-changelog": "3.0.2",
    "gh-pages": "2.2.0",
    "husky": "^4.0.9",
    "node-sass": "^4.12.0",
    "node-sass-export": "^0.0.6",
    "typescript": "^3.6.2",
    "semantic-release": "^15.13.30"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
