{
  "name": "@moda/tokens",
  "version": "0.0.0-development",
  "description": "Constant values for modaoperandi.com",
  "repository": "http://github.com/ModaOperandi/tokens",
  "author": "Moda Operandi",
  "license": "MIT",
  "private": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "style": "lib/assets/stylesheets/_tokens.scss",
  "files": [
    "dist",
    "lib/assets"
  ],
  "scripts": {
    "clean": "rm -rf ./dist",
    "export": "tsc scripts/export.ts && node scripts/export.js",
    "build": "yarn clean && yarn export && yarn tsc",
    "predeploy": "cd docs && yarn install && yarn run build",
    "deploy:local": "gh-pages -d docs/build",
    "deploy": "gh-pages --repo https://$GH_TOKEN@github.com/ModaOperandi/tokens.git -d docs/build --silent",
    "start": "cd docs && yarn start"
  },
  "devDependencies": {
    "@types/node": "^12.7.4",
    "gh-pages": "2.1.1",
    "node-sass": "^4.12.0",
    "node-sass-export": "^0.0.3",
    "typescript": "^3.6.2"
  }
}
