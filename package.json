{
  "name": "@moda/tokens",
  "version": "5.9.2",
  "description": "Constant values for modaoperandi.com",
  "repository": "git@github.com:ModaOperandi/tokens.git",
  "author": "Moda Operandi",
  "license": "MIT",
  "private": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "style": "src/index.scss",
  "files": [
    "dist",
    "src",
    "lib/assets"
  ],
  "scripts": {
    "build": "npm run clean && npm run export && tsc",
    "clean": "rm -rf ./dist",
    "commitlint": "commitlint",
    "export": "tsc scripts/export.ts && node scripts/export.js",
    "postpublish": "pinst --enable",
    "predeploy": "npm run build && cd docs && npm install && npm run build",
    "prepare": "husky install",
    "prepublishOnly": "pinst --disable",
    "semantic-release": "semantic-release",
    "start": "cd docs && npm run start",
    "test": "jest",
    "tsc": "tsc"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@moda/node-sass-export": "^0.1.1",
    "@types/color-string": "^1.5.5",
    "@types/node": "^20.10.7",
    "@types/sass": "^1.43.1",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "gh-pages": "6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "pinst": "^3.0.0",
    "prettier": "^3.1.1",
    "sass": "^1.69.7",
    "semantic-release": "^22.0.12",
    "semantic-release-npm-github": "^5.0.0",
    "typescript": "^5.3.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "color-string": "^1.9.1"
  }
}
